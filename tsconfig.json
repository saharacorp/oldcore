{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "out/release",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "DOM"
    ],
    "sourceMap": false,
    "inlineSourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },

  "include": [
    "src/**/*",
    "typings/**/*"
  ],

  "exclude": [
    "node_modules"
  ]
}
